<h1>Праздники</h1>
<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Дата</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%@holidays.each do |holiday|%>
      <tr>
        <th><%=holiday.text%> </th><br>
        <th><%=holiday.date%> </th><br>
        <th><%=link_to 'Стихи', holiday_poems_path(holiday)%></th>
        <th><%=link_to 'Изменить', edit_holiday_path(holiday)%></th>
        <th><%=link_to 'Удалить', holiday, method: :delete, data: { confirm: 'Are you sure?' }%></th>
      </tr>
    <%end %>
  </tbody>
</table>

<%=link_to 'Создать праздник', new_holiday_path%>






